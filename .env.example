# Voice OAN API - Environment Variables
# Copy this file to .env and fill in your actual values

# Core Settings
ENVIRONMENT=production
SECRET_KEY=your-secret-key-change-in-production
ALLOWED_ORIGINS=*

# JWT
JWT_PUBLIC_KEY_PATH=jwt_public_key.pem

# LLM Provider (openai, azure-openai, or vllm)
LLM_PROVIDER=openai
LLM_MODEL_NAME=
OPENAI_API_KEY=

# Azure OpenAI (if LLM_PROVIDER=azure-openai)
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_API_VERSION=
AZURE_OPENAI_DEPLOYMENT_NAME=

# vLLM (if LLM_PROVIDER=vllm)
INFERENCE_ENDPOINT_URL=
INFERENCE_API_KEY=

# Marqo Vector Search
MARQO_ENDPOINT_URL=
MARQO_INDEX_NAME=sunbird-va-index

# AWS S3 (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=
AWS_S3_BUCKET=
